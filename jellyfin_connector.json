{
  "id": "jellyfin",
  "media": [
    "movies",
    "series",
    "music"
  ],
  "type": [
    "catalogues",
    "details",
    "stream"
  ],
  "name": "Jellyfin",
  "website": "https://github.com/klucon/jellyfin_connector",
  "repository": "https://github.com/klucon/jellyfin_connector",
  "author": "panzerman",
  "version": "1.0.0",
  "description": "Konektor na připojení Jellyfin přes API",
  "baseUrl": "http://{server}/api",
  "responseFormat": "json",
  "config": {
    "server": {
      "type": "string",
      "label": "Server IP",
      "default": "",
      "required": true
    },
    "username": {
      "type": "string",
      "label": "Uživatelské jméno",
      "required": true
    },
    "password": {
      "type": "string",
      "label": "Heslo",
      "required": true
    }
  },
  "headers": {
    "content-type": "application/json",
    "accept": "application/json"
  },
  "api": [
    {
      "name": "movies",
      "type": "catalogue_movies",
      "mediaType": "movie",
      "isHome": true,
      "method": "GET",
      "url": "/movies?page={page}",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "title": "title",
          "poster": "poster_path",
          "rating": "rating"
        }
      },
      "imageBaseUrl": "http://{server}/api/images/"
    },
    {
      "name": "series",
      "type": "catalogue_series",
      "mediaType": "series",
      "isHome": true,
      "method": "GET",
      "url": "/tv-shows?page={page}",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "title": "title",
          "poster": "poster_path",
          "rating": "rating"
        }
      },
      "imageBaseUrl": "http://{server}/api/images/"
    },
    {
      "type": "movie_detail",
      "method": "GET",
      "url": "/movie/{id}",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "title": "title",
          "originalTitle": "original_title",
          "overview": "overview",
          "tagline": "tagline",
          "posterPath": "poster_path",
          "backdropPath": "backdrop_path",
          "releaseDate": "release_date",
          "runtime": "runtime",
          "rating": "vote_average",
          "voteCount": "vote_count",
          "genres": "genres[name]",
          "originalLanguage": "original_language",
          "productionCountries": "production_countries[name]",
          "productionCompanies": "production_companies[name]",
          "spokenLanguages": "spoken_languages[english_name]",
          "status": "status",
          "budget": "budget",
          "revenue": "revenue",
          "homepage": "homepage",
          "imdbId": "imdb_id",
          "adult": "adult",
          "video": "video",
          "popularity": "popularity",
          "originCountry": "origin_country"
        }
      },
      "posterBaseUrl": "http://{server}/api/images/",
      "backdropBaseUrl": "http://{server}/api/images/"
    },
    {
      "type": "series_detail",
      "method": "GET",
      "url": "/tv-show/{id}",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "title": "name",
          "originalTitle": "original_name",
          "overview": "overview",
          "tagline": "tagline",
          "posterPath": "poster_path",
          "backdropPath": "backdrop_path",
          "firstAirDate": "first_air_date",
          "lastAirDate": "last_air_date",
          "rating": "vote_average",
          "voteCount": "vote_count",
          "genres": "genres[name]",
          "originalLanguage": "original_language",
          "productionCountries": "production_countries[name]",
          "productionCompanies": "production_companies[name]",
          "spokenLanguages": "spoken_languages[english_name]",
          "status": "status",
          "homepage": "homepage",
          "adult": "adult",
          "popularity": "popularity",
          "originCountry": "origin_country",
          "numberOfEpisodes": "number_of_episodes",
          "numberOfSeasons": "number_of_seasons",
          "episodeRunTime": "episode_run_time",
          "languages": "languages",
          "networks": "networks[name]",
          "createdBy": "created_by[name]",
          "lastEpisodeToAir": "last_episode_to_air[air_date]",
          "nextEpisodeToAir": "next_episode_to_air[air_date]"
        }
      },
      "posterBaseUrl": "http://{server}/api/images/",
      "backdropBaseUrl": "http://{server}/api/images/"
    },
    {
      "type": "series_episodes_detail",
      "method": "GET",
      "url": "/tv/{series_id}/season/{season_number}?language={catalogueLanguage}",
      "responseFormat": "json",
      "response": {
        "itemsKey": "episodes",
        "episodeMapping": {
          "id": "id",
          "name": "name",
          "overview": "overview",
          "airDate": "air_date",
          "episodeNumber": "episode_number",
          "episodeType": "episode_type",
          "runtime": "runtime",
          "seasonNumber": "season_number",
          "showId": "show_id",
          "stillPath": "still_path",
          "rating": "vote_average"
        }
      },
      "imageBaseUrl": "http://{server}/api/images/"
    },
    {
      "name": "searchMovies",
      "type": "search_movies",
      "mediaType": "movie",
      "method": "GET",
      "url": "/search?query={query}&type=movie",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "title": "title",
          "poster": "poster_path",
          "rating": "vote_average"
        }
      },
      "imageBaseUrl": "http://{server}/api/images/"
    },
    {
      "name": "searchSeries",
      "type": "search_series",
      "mediaType": "series",
      "method": "GET",
      "url": "/search?query={query}&type=tv",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "title": "name",
          "poster": "poster_path",
          "rating": "vote_average"
        }
      },
      "imageBaseUrl": "http://{server}/api/images/"
    },
    {
      "name": "search",
      "type": "stream_search",
      "method": "GET",
      "url": "/streams",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "id": "id",
          "name": "name",
          "type": "type",
          "size": "size"
        }
      }
    },
    {
      "name": "link",
      "type": "link",
      "method": "GET",
      "url": "/stream/{id}/info",
      "responseFormat": "json",
      "response": {
        "mapping": {
          "link": "url"
        }
      }
    }
  ]
}
